<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Çekiliş Sonuç
        link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh' crossorigin='anonymous')
        style(type='text/css').
            @import url(https://fonts.googleapis.com/css?family=Titillium+Web:400,200,200italic,300,300italic,900,700italic,700,600italic,600,400italic);
            html, body {
            height: 100%;
            margin: 0;
            min-width:99%;
            }
            body {
                min-height: 100%; 
                min-width:99%;
                background: url('bg.png');
                background-size:cover;
                background-repeat:no-repeat;
                font-family: 'Titillium Web', cursive;
                font-weight: 100;
            }
            div {
            display: inline-block;
            line-height: 1;
            padding: 20px;
            font-size: 40px;
            }
            span {
            display: block;
            font-size: 20px;
            color: white;
            }

            #days {
            font-size: 100px;
            color: #db4844;
            }
            #hours {
            font-size: 100px;
            color: #f07c22;
            }
            #minutes {
            font-size: 100px;
            color: #f6da74;
            }
            #seconds {
            font-size: 50px;
            color: #abcd58;
            }

    body
        .row(style='text-align:right')
            .col-md-4
            .col-md-6(style='margin-top:70px')
                h1.text-white Mutlu Yıllar QNB Finans Faktoring Ailesi
        .row(style='margin-top:10px')
        .row
            .col-md-5(style='margin-left:120px')
                h2.text-white Çekilişe Katılanlar
                each name in array
                    p.text-white(style='background-color:#828282') #{name}
            .col-md-6(style='')
                h2.text-white.sonuc.d-none Çekilişi Kazanan
                h2.text-white.sonuc.d-none(style='font-weight:bold; text-decoration:underline') #{winner}
                .progress.d-none
                    .progress-bar(role='progressbar' aria-valuenow='0' aria-valuemin='0' aria-valuemax='100' style='width: 0;')
                        span.sr-only 60% Complete

                button.btn.btn-success(onclick='animStart()') Çekilişi Başlat
    script(src='https://code.jquery.com/jquery-3.5.1.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js' integrity='sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6' crossorigin='anonymous')
    script.
        var value = 0;
        function barAnim(){
            value += 15;
            $( ".progress-bar" ).css( "width", value + "%" ).attr( "aria-valuenow", value );    
            return setTimeout(barAnim, 1500); 
            return value >= 100 || setTimeout(barAnim, 50);
        }
        function animStart(){
            $('.progress').removeClass('d-none')
            setTimeout(barAnim, 50);
            setInterval(function(){ 
                $('.sonuc').removeClass('d-none')
                $('.progress').addClass('d-none')
                $('button.btn').addClass('d-none')
            }, 10000);
        }
